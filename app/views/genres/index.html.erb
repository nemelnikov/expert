<p id="notice"><%= notice %></p>

<h1>Listing Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.description %></td>
        <%if can? :find_experts_by_genre, Genre %>
          <td><%= link_to 'Show experts', experts_by_genre_path(genre)%></td>
        <%end%>  
        <td><%= link_to 'Show', genre %></td>
        <%if can? :update, Genre%>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <% end %>
        <%if can? :destroy, Genre %>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Genre%>
<%= link_to 'New Genre', new_genre_path %>
<% end %>