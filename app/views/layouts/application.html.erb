<!DOCTYPE html>
<html>
<head>
  <title>Expert</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
    <header>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
			<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li><%= link_to "Home",    index_path  %></li>
					<li><%= link_to "Ask",    new_question_path  %></li>
		            <li><%= link_to "Help",    help_path   %></li>
		            <li><%= link_to "Genres",  genres_path %></li> 
		            <li><%= link_to "Experts",  all_experts_path %></li> 
		            <li>
		            	<%=
		            		link_to_unless(user_signed_in? || ask_expert_signed_in?,"Login",new_user_session_path) do
		            				if user_signed_in?
		            					link_to("User Info",profile_user_path(ProfileUser.find_by_user_id(current_user.id))) 
		            				else
		            				link_to("Expert Info",profile_expert_url(ProfileExpert.find_by_ask_expert_id(current_ask_expert.id)))

		            				end
		            			end
		            			
		            		
		            	%>
		            </li>
				</ul>
				
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
	</header>
    
    <section id="main">
		<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<%= yield %>
		</div>
		<div class="col-md-2"></div>
		</div>
	</section> 

 </div>
 </body>
</html>

